<%- include('./partials/head'); %>  
<title>Sign up</title> 
</head>
<body class="login-body">
    <form class="login-form" action="/signup" method="post" >
        <p class="login-wlcm-text">Lets get started ðŸ˜‰</p>
        <button class="signin-google">
          <img class="g-logo" src="/static/images/google.svg">
          <span>Sign up with Google</span>
        </button>
        <p class="form-group">
            <label>Username</label>
             <input class="login-input"  type="text" name="username" placeholder="username"/>
        </p>
        <p class="form-group">
            <label>Email Address</label>
             <input class="login-input"  type="email" name="email" placeholder="your@email.com"/>
        </p>
        <p class="form-group">
            <label>password</label>
            <input class="login-input"  type="password" name="password"  placeholder="your password"/>
        </p>
    <button class="login-btn" type="submit" >Create your account</button>
    <p >
        Already have an account? <a class="register" href="/login">Sign in</a>
    </p>    
</form>
<!-- dynamically add a classname from the message -->
<div class="message 
<%= message.status %>
" id="msg-box">
       <p><%= message.msg %></p>   
</div>
<span id="loading" class="loading "></span>


<% if(message.status === "success"){ %>
<script> 
//await for the dom to load
   document.addEventListener("DOMContentLoaded", function() {
    //show loader
    document.getElementById("loading").classList.add("loader")
    
    //redirect to login page
    setTimeout(()=>{
        window.location.href = "/login"
    },3000) 
   })
</script>
<% } %>



</body>
</html>