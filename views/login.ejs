<%- include('./partials/head'); %>  
<title>Login</title> 
</head>
<body class="login-body">
    <form class="login-form" action="/login" method="post" id="loginForm">
        <p class="login-wlcm-text">Welcome back ðŸ¥³</p>
        <button class="signin-google">
          <img class="g-logo" src="/static/images/google.svg">
          <span>Sign in with Google</span>
        </button>
        <p class="form-group">
            <label>Email Address</label>
             <input class="login-input"  type="text" name="email" placeholder="your@email.com"  id="email"/>
        </p>
        <p class="form-group">
            <label>password</label>
            <input class="login-input"  type="password" name="password"  placeholder="your password" id="password"/>
        </p>
    <button class="login-btn" type="submit" >Sign in</button>
    <p >
        Don't have an account? <a class="register" href="/signup">Register</a>
    </p>    
</form>

<div class="message 
<%= message.status %>
" id="msg-box">
       <p><%= message.msg %></p>   
</div>
<% if(message.status === "success"){ %>
    <script> 
    //await for the dom to load
       document.addEventListener("DOMContentLoaded", function() {
        //show loader
        //document.getElementById("loading").classList.add("loader")
        console.log('token','<%= message.token %>')
        //redirect to login page
        setTimeout(() => {
            window.location.href = "/visitors?token=" + '<%= message.token %>'
          }, 2000);
       })
    </script>
    <% } %>
</body>
</html>